# Application Configuration
PUBLIC_HOST=http://localhost
PORT=8080

# Database Configuration
DB_DRIVER=sqlite
DB_USER=root
DB_PASSWORD=password
DB_NAME=gopi_dev
DB_ADDRESS=localhost:5432

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_NAME=gopi_session
SESSION_SECURE=false
SESSION_DOMAIN=localhost
SESSION_MAX_AGE=86400

# JWT Configuration
JWT_SECRET=your-jwt-secret-here-change-in-production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@gopadi.com

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=app.log
LOG_TO_FILE=false
RUN_MODE=development

# Storage Configuration
# Choose backend: local or s3
STORAGE_BACKEND=local

# Local storage (defaults work with router static serving)
UPLOAD_BASE_DIR=./uploads
UPLOAD_PUBLIC_BASE_URL=/uploads

# S3/MinIO configuration (used when STORAGE_BACKEND=s3)
# For AWS, you can leave S3_ENDPOINT empty to use default; otherwise set to e.g. s3.us-east-1.amazonaws.com or a MinIO endpoint
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_USE_SSL=true
S3_FORCE_PATH_STYLE=false
# Optional CDN/public base URL (e.g., https://cdn.example.com). If set, URLs will be built with this prefix
S3_PUBLIC_BASE_URL=
